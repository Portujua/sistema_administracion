# Evitar que se muestre el contenido de las carpetas
Options -Indexes

# Pagina de 404 not found
ErrorDocument 404 /lapizprocomunidad/404.html

# Prohibir acceso a .htaccess
<Files ~ “^.*\.([Hh][Tt][Aa])”>
order allow,deny
deny from all
satisfy all
</Files>

RewriteEngine on

# Prohibir acceso a carpeta bd
RewriteRule ^bd.*$ /lapizprocomunidad/ [R=301,L]

# Reglas para la API
RewriteRule ^api/lugares$ /lapizprocomunidad/php/run.php?fn=cargar_lugares [QSA,L]
RewriteRule ^api/personas$ /lapizprocomunidad/php/run.php?fn=cargar_personas [QSA,L]
RewriteRule ^api/permisos$ /lapizprocomunidad/php/run.php?fn=cargar_permisos [QSA,L]

RewriteRule ^api/lugar/(.+)$ /lapizprocomunidad/php/run.php?fn=cargar_lugar&lid=$1 [QSA,L]
RewriteRule ^api/persona/(.+)$ /lapizprocomunidad/php/run.php?fn=cargar_persona&cedula=$1 [QSA,L]

RewriteRule ^api/check/usuario/(.+)$ /lapizprocomunidad/php/run.php?fn=check_usuario&username=$1 [QSA,L]